<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Homepage</title>
    <link rel="stylesheet" href="/css/styles.css">
</head>

<body>
    <div class="topnav">
        <a href="/">Home</a>
        <a href="/sample">Test</a>
        <a href="/create">Create Users</a>
        <a class="active" href="/update">Update Users</a>

    </div>
    <form action="/update-user" method="POST">
        <fieldset>
            <legend>Edit Users:</legend>
            <div class="d-none">
                <label for="id">ID:</label>
                <input type="id" name="id" value="<%=userEdit.id %>">
            </div>
            <div>
                <label for="email">Email:</label>
                <input type="email" name="email" value="<%=userEdit.email %>">
            </div>
            <div>
                <label for="name">Name:</label>
                <input type="text" name="name" value="<%=userEdit.name %>">
            </div>
            <div>
                <label for="city">City:</label>
                <input type="text" name="city" value="<%=userEdit.city %>">
            </div>
            <div>
                <button type="submit" class="save">Save</button>
            </div>
        </fieldset>
    </form>
</body>

</html>