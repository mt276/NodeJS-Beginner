<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Homepage</title>
    <link rel="stylesheet" href="/css/styles.css">
</head>

<body>
    <div class="topnav">
        <a class="active" href="/">Home</a>
        <a href="/sample">Test</a>
        <a href="/create">Create Users</a>
    </div>
    <div class="table-container">
        <h2 class="title">User List</h2>
        <table>
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Email</th>
                    <th>Name</th>
                    <th>City</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody id="userList">
                <% listUsers.forEach(function(user) { %>
                    <tr>
                        <td>
                            <%=user.id %>
                        </td>
                        <td>
                            <%=user.email %>
                        </td>
                        <td>
                            <%=user.name %>
                        </td>
                        <td>
                            <%=user.city %>
                        </td>
                        <td>
                            <button class="edit" onclick="putUpdateUser(this)">Edit</button>
                            <button class="delete" onclick="deleteUserForId(this)">Delete</button>
                        </td>
                    </tr>
                    <% }); %>
            </tbody>
        </table>
    </div>
</body>
<script src="./js/home.js"></script>

</html>